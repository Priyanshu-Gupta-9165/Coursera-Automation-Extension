{
    "manifest_version": 3,
    "name": "Coursera Automation Extension",
    "version": "1.0.0",
    "description": "Automate Coursera course tasks including videos, quizzes, and assignments with a beautiful neumorphic UI.",
    "author": "Priyanshu Gupta",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "*://*.coursera.org/*"
    ],
    "background": {
        "service_worker": "scripts/background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Coursera Automation"
    },
    "options_page": "about.html",
    "icons": {
        "16": "assets/icon-16.png",
        "32": "assets/icon-32.png",
        "48": "assets/icon-48.png",
        "128": "assets/icon-128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.coursera.org/*"
            ],
            "js": [
                "scripts/content.js"
            ],
            "css": [
                "styles/content.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "commands": {
        "open_popup": {
            "suggested_key": {
                "default": "Alt+C",
                "mac": "Command+C"
            },
            "description": "Open Coursera Automation popup"
        },
        "refresh_quiz": {
            "suggested_key": {
                "default": "Alt+Z",
                "mac": "Command+Z"
            },
            "description": "Refresh quiz answers"
        }
    }
}